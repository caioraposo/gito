#!/bin/sh

build_pkg() {
    if [ -z "$1" ]; then
        echo "Package name is empty!"
        return 1
    fi

    _pkgdir=$APORTS_DIR/$1

    if [ ! -d "$_pkgdir" ]; then
        echo "Package '$1' doesn't exists in '$APORTS_DIR' directory!"
        return 1
    fi

    if [ -n "$USE_TEMP_DIR" ]; then
        cp -r $_pkgdir $TEMP_APORTS_DIR
        cd $TEMP_APORTS_DIR/$1
    else
        cd $_pkgdir
    fi

    abuild -R
}

main() {
    while getopts "p:t" opt; do
        case $opt in
            p) APORTS_DIR=$OPTARG;;
            t) USE_TEMP_DIR=1 ;;
        esac
    done

    shift $((OPTIND-1))

    APORTS_DIR=${APORTS_DIR:-$HOME/aports}

    if [ -n "$USE_TEMP_DIR" ]; then
        TEMP_DIR=$(mktemp -d)
        TEMP_APORTS_DIR=$TEMP_DIR/$(basename $APORTS_DIR)

        mkdir -p $TEMP_APORTS_DIR
    fi

    for pkg in $@; do
        build_pkg $pkg
    done

    [ -n "$USE_TEMP_DIR" ] && rm -rf $TEMP_DIR
}

main $@

