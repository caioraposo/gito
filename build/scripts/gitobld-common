#!/bin/sh

program=${COMMAND:-${0##*/}}

msg() {
	printf "%s\n" "$1"
}

warn() {
	printf "${YELLOW}Warning:${NORMAL} %s\n" "$1"
}

error() {
	printf "${RED}Error:${NORMAL} %s\n" "$1"
}

die() {
	[ "$#" -gt 0 ] && error "$1"
	exit 1
}

enable_colors() {
	NORMAL="\033[1;0m"
	STRONG="\033[1;1m"
	RED="\033[1;31m"
	GREEN="\033[1;32m"
	YELLOW="\033[1;33m"
}

disable_colors() {
	NORMAL=""
	STRONG=""
	RED=""
	GREEN=""
	YELLOW=""
}

update_color_config() {
	case "$GITOBLD_COLOR_CONFIG" in
		always)
			enable_colors
			;;
		never)
			disable_colors
			;;
		auto)
			if [ -t 1 ]; then
				enable_colors
			else
				disable_colors
			fi
			;;
	esac
}

update_color_config

