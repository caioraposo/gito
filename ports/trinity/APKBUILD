# Maintainer: Franklin Sobrinho <franklin.g.sobrinho@gmail.com>

pkgname=trinity
pkgver=2.8.4
pkgrel=0
pkgdesc="Trinity RNA-Seq de novo transcriptome assembly"
url="https://github.com/trinityrnaseq/trinityrnaseq/wiki"
arch="x86_64"
license="BSD-3-Clause"
depends="bash coreutils perl python2 py2-numpy openjdk8-jre bowtie2 jellyfish salmon samtools"
makedepends="cmake zlib-dev libgff-dev cereal-dev"
install=""
source="
	https://github.com/trinityrnaseq/trinityrnaseq/archive/Trinity-v$pkgver.tar.gz#/$pkgname-$pkgver.tar.gz
	000-installer-dest-patch.patch
	001-makefile-destdir.patch
	"

builddir="$srcdir"/trinityrnaseq-Trinity-v$pkgver

prepare() {
	default_prepare
	cd "$builddir"
}

build() {
	cd "$builddir"

    make
    make plugins
}

_install_trinity() {
    _prefix="${1:-/usr/local}"
    _pkgdir="$pkgdir"/"$_prefix"
    _libdir=/lib/trinity
    _install_dir="$_pkgdir"/"$_libdir"

    mkdir -p $( dirname "$_install_dir" )
    mv "$builddir" "$_install_dir"

    mkdir "$_pkgdir"/bin
    ln -s "$_prefix"/"$_libdir"/Trinity "$_pkgdir"/bin/Trinity
    ln -s "$_prefix"/"$_libdir"/Trinity "$_pkgdir"/bin/trinity
}

package() {
	cd "$builddir"

    _install_trinity /usr
}

check() {
	cd "$builddir"

	_testdir="$builddir"/sample_data/test_Trinity_Assembly

	_lsample="$_testdir"/reads.left.fq.gz
	_rsample="$_testdir"/reads.right.fq.gz

	./Trinity --seqType fq --max_memory 1G --SS_lib_type RF --CPU 1 \
		--left "$_lsample" --right "$_rsample"
	
	# ./util/misc/illustrate_ref_comparison.pl \
	# 	"$_testdir"/__indiv_ex_sample_derived/refSeqs.fa \
	# 	"$_testdir"/trinity_out_dir/Trinity.fasta 90
	#	
	# ./Analysis/FL_reconstruction_analysis/FL_trans_analysis_pipeline.pl \
	# 	--query "$_testdir"/trinity_out_dir/Trinity.fasta \
	# 	--target "$_testdir"/__indiv_ex_sample_derived/refSeqs.fa \
	# 	--no_reuse

	rm -rf trinity_out_dir
}

